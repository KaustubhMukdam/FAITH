# ========================================
# FAITH - Environment Configuration
# ========================================

# Application Environment
NODE_ENV=development
APP_ENV=development

# Backend Configuration
BACKEND_PORT=5000
BACKEND_HOST=localhost
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/faith_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=faith_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT & Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
REFRESH_TOKEN_EXPIRY=30d

# Account Aggregator (AA) Integration
ENABLE_AA_INTEGRATION=false
AA_PROVIDER=finvu
AA_CLIENT_ID=your-aa-client-id
AA_CLIENT_SECRET=your-aa-client-secret
AA_BASE_URL=https://sandbox.sahamati.org.in
AA_CONSENT_EXPIRY_DAYS=365

# SMS & Push Notifications
ENABLE_SMS_PARSING=false
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890
FCM_SERVER_KEY=your-firebase-cloud-messaging-server-key
FCM_PROJECT_ID=your-firebase-project-id

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@faith.app
SENDGRID_FROM_NAME=FAITH Finance Tracker

# Market Data APIs
FINNHUB_API_KEY=your-finnhub-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-fallback

# Logging & Monitoring
LOG_LEVEL=debug
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# SEBI & Compliance
LEGAL_DISCLAIMER_VERSION=1.0
COMPLIANCE_EMAIL=compliance@faith.app
ADVISOR_REFERRAL_ENABLED=false

# Feature Flags
ENABLE_INVESTMENT_HUB=false
ENABLE_BUDGET_ROLLOVER=true
ENABLE_DAILY_INSIGHTS=false
ENABLE_MOCK_DATA=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (S3 or local)
FILE_STORAGE_TYPE=local
AWS_S3_BUCKET=faith-uploads
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Analytics
MIXPANEL_TOKEN=your-mixpanel-token
SEGMENT_WRITE_KEY=your-segment-write-key
